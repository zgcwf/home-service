/* components/carousel/carousel.wxss */
.container {
  padding: 30rpx 0 30rpx 30rpx;
}

.carousel {
  height: 150rpx;
}

.carousel-item {
  width: 300rpx;
  height: 100%;
  border-radius: 20rpx;
  background: -webkit-linear-gradient(left top, #E68D44, #EB6D59);
}

.active-carousel-item {
  color: #FFF;
  background: -webkit-linear-gradient(left top, #FBC02D, #EB6D59);
}

.carousel-item-name {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}